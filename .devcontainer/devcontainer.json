{
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"features": {
		"ghcr.io/akhildevelops/devcontainer-features/android-cli:0": {},
		"ghcr.io/jarrodcolburn/features/android-sdk:0": {},
		"ghcr.io/jarrodcolburn/features/flutter-sdk:0": {}
	},
	"postCreateCommand": "cat /etc/os-release && flutter doctor",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"dart-code.flutter",
				"Dart-Code.flutter",
				"marcelovelasquez.flutter-tree"
			]
		}
	}
}